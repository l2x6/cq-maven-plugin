def MAVEN_PARAMS = '-B -e -ntp -s $MAVEN_SETTINGS -Djava.net.preferIPv4Stack=true'

pipeline {

    agent {
        label 'checkin'
    }

    tools {
        jdk 'java-11'
    }

    environment {
        MAVEN_OPTS = '-Xmx3g'
        TESTCONTAINERS_RYUK_DISABLED = 'true'
    }

    options {
        buildDiscarder(
            logRotator(artifactNumToKeepStr: '5', numToKeepStr: '10')
        )
    }

    stages {
        stage('Clean') {
            steps {
                // Clean up any orphaned containers that may be lingering
                sh "docker container prune -f"
            }
        }

        stage('Tests') {
            parallel {
                // %generated-stages-start%
                stage('Pure product tests') {
                    steps {
                        configFileProvider([configFile(fileId: 'fuse-maven-settings', variable: 'MAVEN_SETTINGS')]) {
                            sh "./mvnw ${MAVEN_PARAMS} clean test -fae"
                        }
                    }
                    post {
                        always {
                            junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                            junit allowEmptyResults: true, testResults: '**/target/failsafe-reports/*.xml'
                        }
                    }
                }
                stage('Allowed mixed tests') {
                    steps {
                        configFileProvider([configFile(fileId: 'fuse-maven-settings', variable: 'MAVEN_SETTINGS')]) {
                            sh "cd product/integration-tests-mixed-allowed && ../../mvnw ${MAVEN_PARAMS} clean test -Pmixed -fae"
                        }
                    }
                    post {
                        always {
                            junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                            junit allowEmptyResults: true, testResults: '**/target/failsafe-reports/*.xml'
                        }
                    }
                }
                stage('Native mixed tests') {
                    steps {
                        configFileProvider([configFile(fileId: 'fuse-maven-settings', variable: 'MAVEN_SETTINGS')]) {
                            sh "cd product/integration-tests-mixed-native && ../../mvnw ${MAVEN_PARAMS} clean test -Pmixed -fae"
                        }
                    }
                    post {
                        always {
                            junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                            junit allowEmptyResults: true, testResults: '**/target/failsafe-reports/*.xml'
                        }
                    }
                }
                stage('JVM mixed tests') {
                    steps {
                        unstash name: 'maven-local-repo'
                        configFileProvider([configFile(fileId: 'fuse-maven-settings', variable: 'MAVEN_SETTINGS')]) {
                            sh "cd product/integration-tests-mixed-jvm && ../../mvnw ${MAVEN_PARAMS} clean test -Pmixed -fae"
                        }
                    }
                    post {
                        always {
                            junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                            junit allowEmptyResults: true, testResults: '**/target/failsafe-reports/*.xml'
                        }
                    }
                }
                // %generated-stages-end%
            }
        }
    }
}
